<div id="search_area">
  <form id="search" action="/restaurants", method ="GET">
    <div class="flex justify-center relative mt-8 mx-5">
    <div class="flex justify-center w-full">
      <%= render 'shared/search', search_url: restaurants_path %>
    </div>
    </div>
  </form>
</div>


</div>
<ul class="list-none space-y-6 container mx-auto px-6 py-6">
	<% @restaurants.each do |restaurant| %>
		<%= render "restaurant_card", restaurant: restaurant %>
	<% end %>
</ul>
