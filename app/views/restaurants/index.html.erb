<div id="search-area">
</div>
<% @restaurants.each do |restaurant| %>
	<div id="restaurant">
		<div id="restaurant-img">
			<%= image_tag "food_filler.jpeg", style: 'height:100%;width:auto;' %>
		</div>
		<div id="restaurant-info">
			<span id="description" class="text">
				<%= link_to restaurant.name, restaurant_path(restaurant), :class => 'btn btn-primary' %>
			</span>
			<span id="reviews" class="text">
				<%= link_to "View reviews for " + restaurant.name, restaurant_reviews_path(restaurant), :class => 'btn btn-primary' %>
			</span>
			<span id="star">
				⭐️
			</span>
			<span id="score" class="text">Average Rating: <%= restaurant.average_rating(restaurant.id) %></span>
		</div>
	</div>
<% end %>
