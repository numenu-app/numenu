<div>
	<span class="items-left justify-left w-48">
		Hello <%= @user.first_name %> <%= @user.last_name %>
	</span>

	<span class="items-right justify-right w-24">
		<%= link_to 'Logout', users_logout_path, :class => 'btn btn-primary' %>
	</span>
</div>
<%= link_to 'View Restaurants', restaurants_path, :class => 'btn btn-primary' %>

<h2>
	My Restaurant Reviews:
</h2>
<% if @restaurant_reviews != nil %>
	<% @restaurant_reviews.each do |r| %>
		<div>
			<span>
				<%= link_to r.restaurant.name, restaurant_reviews_path(r.restaurant.id) %>
			</span>
			<br>
			<span>
				<%= r.rating %>
			</span>
			<span>
				<%= r.review %>
			</span>
		</div>
		<br>
	<% end %>
<% else %>
	No restaurant reviews yet
<% end %>

<br>

<h2>My Dish Reviews:</h2>
<% if @dish_reviews != nil %>
	<% @dish_reviews.each do |d| %>
		<div>
			<span>
				<%= link_to d.dish.dish_name, dish_reviews_path(d.dish.id) %> from <%= link_to d.dish.restaurant.name, restaurant_reviews_path(d.dish.restaurant.id) %>
			</span>
			<br>
			<span>
				<%= d.rating %>
			</span>
			<span>
				<%= d.review %>
			</span>
		</div>
		<br>
	<% end %>
<% else %>
	No dish reviews yet
<% end %>